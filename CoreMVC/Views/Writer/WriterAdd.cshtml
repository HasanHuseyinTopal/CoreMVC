@model CoreMVC.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form action="WriterAdd" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        <input type="text" class="form-control" asp-for="WriterName" id="exampleInputName1" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        <input type="email" class="form-control" asp-for="WriterMail" id="exampleInputEmail3" placeholder="Email">
                        @Html.ValidationMessageFor(x => x.WriterMail)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        <input type="password" class="form-control" asp-for="WriterPassword" id="exampleInputPassword4" placeholder="Password">
                        @Html.ValidationMessageFor(x => x.WriterPassword)
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(x => x.CityID, (List<SelectListItem>)ViewBag.Combo,
                       new { @class = "form-control", @style = "width:400px" })
                    </div>
                    <div class="form-group">
                            <label>Yazar Görsel</label>
                            <input type="file"asp-for="WriterImage" />
                        </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        <textarea class="form-control" asp-for="WriterAbout" id="exampleTextarea1" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">Cancel</button> 
                </div>
            </div>
        </div>
    </div>
</form>