@model List<EntityLayer.Concrete.Blog>

<div class="tech-btm">
    <h3>Son Gönderiler</h3>
    <div class="blog-grids row mb-3">
        @foreach (var item in Model)
        {
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogDetails/@item.BlogID">
                    <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="single.html">@item.BlogContent.Substring(0,(item.BlogContent.Substring(0,30).LastIndexOf(" ")))</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.BlogCreateDate
                    </span>
                </div>
            </div>
        }
    </div>
</div>