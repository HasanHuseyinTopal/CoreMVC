@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogUpdate";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("BlogUpdate", "Blog", FormMethod.Post))
{
    @Html.HiddenFor(x => x.BlogID)
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTittle, new { @class = "form-control", @style = "width : 400px" })
    @Html.Label("Blog İçeriği")
    @Html.TextBoxFor(x => x.BlogContent, new { @class = "form-control", @style = "width : 400px" })
    @Html.Label("Blog Küçük görseli")
    @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control", @style = "width : 400px" })
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control", @style = "width : 400px" })
    @Html.Label("Oluşturulma Tarihi")
    @Html.TextBoxFor(x => x.BlogCreateDate, new { @class = "form-control", @style = "width : 400px" })
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.combo, new { @class = "form-control", @style = "width : 400px" })
    @Html.Label("Durum")
    @Html.TextBoxFor(x => x.BlogStatus, new { @class = "form-control", @style = "width : 400px" })
    @Html.Label("Yazar")
    @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control", @style = "width : 400px" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
}
